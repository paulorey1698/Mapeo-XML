<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/venta?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">paulo</property>
    <mapping resource="com/mapeoxml/model/persistencia/Proveedor.hbm.xml"/>
    <mapping resource="com/mapeoxml/model/persistencia/Presentacion.hbm.xml"/>
    <mapping resource="com/mapeoxml/model/persistencia/Producto.hbm.xml"/>
    <mapping resource="com/mapeoxml/model/persistencia/Marca.hbm.xml"/>
    <mapping resource="com/mapeoxml/model/persistencia/Zona.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
